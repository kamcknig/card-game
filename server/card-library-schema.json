{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating Dominion-style cards",
  "type": "object",
  "$defs": {
    "CardType": {
      "type": "string",
      "enum": [
        "ACTION",
        "ALLY",
        "ARTIFACT",
        "ATTACK",
        "AUGUR",
        "BOON",
        "CASTLE",
        "CLASH",
        "COMMAND",
        "CURSE",
        "DOOM",
        "DURATION",
        "EVENT",
        "FATE",
        "FORT",
        "HEIRLOOM",
        "HEX",
        "KNIGHT",
        "LANDMARK",
        "LIAISON",
        "LOOT",
        "LOOTER",
        "NIGHT",
        "ODYSSEY",
        "OMEN",
        "PRIZE",
        "PROJECT",
        "PROPHECY",
        "REACTION",
        "RESERVE",
        "REWARD",
        "RUINS",
        "SHADOW",
        "SHELTER",
        "SPIRIT",
        "STATE",
        "TOWNSFOLK",
        "TRAIT",
        "TRAVELLER",
        "TREASURE",
        "VICTORY",
        "WAY",
        "WIZARD",
        "ZOMBIE"
      ]
    }
  },
  "additionalProperties": {
    "type": "object",
    "properties": {
      "victoryPoints": {
        "type": "integer",
        "description": "Number of 'static' victory points the card is worth."
      },
      "cost": {
        "type": "object",
        "properties": {
          "treasure": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "treasure"
        ]
      },
      "isBasic": {
        "type": "boolean",
        "description": "Indicates the card is a basic supply card (not a kingdom card)"
      },
      "cardName": {
        "type": "string",
        "description": "The human-readable card name."
      },
      "type": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/CardType"
        },
        "uniqueItems": true,
        "description": "Defines the type of the card (TREASURE, VICTORY, ACTION, etc.)."
      },
      "targetScheme": {
        "type": "string",
        "enum": [
          "ALL_OTHER"
        ]
      },
      "abilityText": {
        "type": "string",
        "description": "The text to display on the card"
      }
    },
    "required": ["cost", "type"],
    "additionalProperties": false,
    "allOf": [
      {
        "if": {
          "properties": {
            "type": {
              "contains": {"const": "ATTACK"}
            }
          }
        },
        "then": {
          "required": ["targetScheme"]
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "contains": {"const": "VICTORY"}
            }
          }
        },
        "then": {
          "required": ["victoryPoints"]
        }
      }
    ]
  }
}
