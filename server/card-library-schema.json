{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating Dominion-style cards",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/$defs/Card"
  },
  "$defs": {
    "CardType": {
      "type": "string",
      "enum": [
        "ACTION",
        "ALLY",
        "ARTIFACT",
        "ATTACK",
        "AUGUR",
        "BOON",
        "CASTLE",
        "CLASH",
        "COMMAND",
        "CURSE",
        "DOOM",
        "DURATION",
        "EVENT",
        "FATE",
        "FORT",
        "HEIRLOOM",
        "HEX",
        "KNIGHT",
        "LANDMARK",
        "LIAISON",
        "LOOT",
        "LOOTER",
        "NIGHT",
        "ODYSSEY",
        "OMEN",
        "PRIZE",
        "PROJECT",
        "PROPHECY",
        "REACTION",
        "RESERVE",
        "REWARD",
        "RUINS",
        "SHADOW",
        "SHELTER",
        "SPIRIT",
        "STATE",
        "TOWNSFOLK",
        "TRAIT",
        "TRAVELLER",
        "TREASURE",
        "VICTORY",
        "WAY",
        "WIZARD",
        "ZOMBIE"
      ]
    },
    "Card": {
      "type": "object",
      "properties": {
        "randomizer": {
          "type": "string",
          "description": "Indicates the 'key' used as the randomizer for selecting a card to be used in a match's kingdom. If it's not defined, the card's key will be used. If it's null then it will not be used in kingdom selection"
        },
        "victoryPoints": {
          "type": "integer",
          "description": "Number of 'static' victory points the card is worth."
        },
        "tags": {
          "description": "A list of tags applied to the object, can be used for filter operations.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cost": {
          "type": "object",
          "properties": {
            "treasure": {
              "type": "integer",
              "minimum": 0
            },
            "potion": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": ["treasure"],
          "additionalProperties": false
        },
        "mat": {
          "type": "string",
          "description": "Indicates the card requires a mat to be used."
        },
        "isBasic": {
          "type": "boolean",
          "description": "Indicates the card is a basic supply card (not a kingdom card)."
        },
        "cardName": {
          "type": "string",
          "description": "The human-readable card name. If not defined, the card's key is capitalized and used as the card name."
        },
        "type": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/CardType"
          },
          "uniqueItems": true,
          "description": "Defines the type(s) of the card (e.g., TREASURE, VICTORY, ACTION)."
        },
        "targetScheme": {
          "type": "string",
          "enum": ["ALL_OTHER", "ALL"],
          "description": "Required for ATTACK cards to specify the target pattern."
        },
        "abilityText": {
          "type": "string",
          "description": "The text to display on the card."
        }
      },
      "required": ["cost", "type"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "contains": {
                  "const": "ATTACK"
                }
              }
            }
          },
          "then": {
            "required": ["targetScheme"]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "contains": {
                  "const": "VICTORY"
                }
              }
            }
          },
          "then": {
            "required": ["victoryPoints"]
          }
        }
      ]
    }
  }
}
